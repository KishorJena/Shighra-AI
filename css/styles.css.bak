:root {
    --primary: #FF9933;
    --background: #263238;
    --text: #EAEAEA;
    --secondary: #6A7B9D;
    --accent-green: #15803D;
    --accent-purple: #7E22CE;
    --black: #000000;
    --white: #FFFFFF;
    --card-bg: rgba(255, 255, 255, 0.03);
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    scroll-behavior: smooth;
}

body {
    background-color: var(--background);
    color: var(--text);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    margin: 0;
    padding-top: 80px;
    line-height: 1.6;
}

header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    padding: 20px 50px;
    background-color: rgba(38, 50, 56, 0.95);
    backdrop-filter: blur(10px);
    z-index: 1000;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
}

.logo {
    display: flex;
    align-items: center;
    gap: 10px;
}

.logo img {
    height: 40px;
}

.logo span {
    font-size: 1.5rem;
    font-weight: bold;
}

.nav-links {
    list-style: none;
    display: flex;
    gap: 30px;
    align-items: center;
}

.nav-links a {
    color: #ffffff;
    text-decoration: none;
    font-weight: bold;
}

.install-button {
    background-color: #FF9933;
    padding: 10px 20px;
    border-radius: 5px;
}

main {
    min-height: 100vh;
    flex-grow: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.hero {
    max-width: 1000px;
    padding: 0 20px;
}

.hero h1 {
    font-size: 3.5rem;
    margin-bottom: 10px;
}

.hero-subtitle {
    font-size: 1.5rem;
    margin-bottom: 30px;
    color: #aaa;
}

.accent-text {
    background: -webkit-linear-gradient(45deg, #00FF00, #FF9933, #800080);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.hero p {
    font-size: 1.2rem;
    margin-bottom: 40px;
}

.hero-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
}

.cta-button {
    background-color: #FF9933;
    color: #ffffff;
    padding: 15px 30px;
    text-decoration: none;
    border-radius: 50px;
    font-weight: bold;
    transition: background-color 0.3s;
}

.playground-button {
    background-color: transparent;
    border: 2px solid #FF9933;
}

.cta-button:hover {
    background-color: #e68a2e;
}

.playground-button:hover {
    background-color: #FF9933;
}

.content-section {
    padding: 100px 50px;
    text-align: center;
}

.content-section h2 {
    font-size: 2.5rem;
    margin-bottom: 40px;
}

.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
}

.feature-card {
    background-color: #1e1e1e;
    padding: 30px;
    border-radius: 10px;
    border: 1px solid #333;
}

.feature-card h3 {
    font-size: 1.5rem;
    margin-bottom: 15px;
    color: #FF9933;
}

footer {
    padding: 40px 50px;
    text-align: center;
}

.social-links a {
    margin: 0 10px;
}

.social-links img {
    height: 24px;
    width: 24px;
}
